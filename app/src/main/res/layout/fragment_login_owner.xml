<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginOwner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_Pin"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_gravity="right"
            android:backgroundTint="#FFFFFF"
            android:onClick="btn_pin"
            android:text="lupa PIN?"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnLoginOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="16dp"
            android:onClick="loginOwner"
            android:text="Login" />

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="tvRegister"
            android:text="Tidak Punya Akun? Daftar Sekarang"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:text="Atau login dengan akun media sosial"
            android:textAlignment="center"
            android:textSize="12sp" />

    </LinearLayout>

</FrameLayout>